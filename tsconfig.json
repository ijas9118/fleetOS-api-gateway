{
  "compilerOptions": {
    "target": "ES2020",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["*"]
    },
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
